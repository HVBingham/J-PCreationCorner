@model JPCreations.Models.ProductsIndexView

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table class="table">
    <tr>
        <th>
            @Html.Label("Product Name")
        </th>
        <th>
            @Html.Label("Category")
        </th>
        <th>
            @Html.Label("Description")
        </th>
        <th>
            @Html.Label("Price")
        </th>

        <th>
            @Html.Label("Image")
        </th>
        <th>
            @Html.Label("Quantity")
        </th>
    </tr>
    @foreach (var item in Model.Products)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <img src="@Url.Content(item.Image.ImagePath)" width="100" , height="150" />
            </td>
            <td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseQuantity)
            </td>
            <td>
               | @Html.ActionLink("Product Details", "ProductDetails", new { id = item.Id })|
                <br />
          
            </td>
        </tr>
    }
   
    

</table>
