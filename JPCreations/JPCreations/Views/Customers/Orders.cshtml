@model IEnumerable<JPCreations.Models.ViewModels.OrderViewModel>

@if (!Model.Any())
{
    <h3 class="text-center">There are no orders.</h3>
}
else
{
    <table class="table">
        <tr>
            <th>
                Order Id:
            </th>
            <th>
                Customer Name:
            </th>
            <th>
                Order Details:
            </th>
            <th>
                Order Date:
            </th>
            <th>
                Total:
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @foreach (var item2 in item.ProductsAndQty)
                    {
                        @item2.Key @:x @item2.Value <br />


                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
            </tr>
        }

    </table>
}
@Html.ActionLink("Back to Products","Index", "Customers")