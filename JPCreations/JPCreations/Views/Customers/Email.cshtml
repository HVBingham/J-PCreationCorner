@model JPCreations.Models.Customer
@{
    ViewBag.Title = "Email";
}
@Html.HiddenFor(model=>model.Id)
@using (Html.BeginForm())
{
    
    @Html.AntiForgeryToken()
    <h2>Email</h2>
    <br />
    <br />
    if (ViewBag.Error != null)
    {<h2>@ViewBag.Error</h2>}
    <form method="post" action="Email">
        <div class="container">
            <br />
            <br/>
            <span class="form-control-static">Subject:</span><input class="form-control" type="text" name="subject" />
            <br />
            <span class="form-control-static">Message:</span><input class="form-control" type="text" name="message" />
            <br />
            <input type="submit" class="btn btn-primary"  value="Send"/>
        </div>
    </form>
   
}
<div>
   | @Html.ActionLink("Back to Products", "Index", "Customers", new { id=Model.Id})|
</div>


